<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000"/> <!-- Shadow color -->
            <corners android:radius="12dp"/> <!-- Match the corner radius of the card -->
        </shape>
    </item>

    <!-- Card Background -->
    <item android:top="2dp" android:bottom="4dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle"> <!-- Card background color -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>