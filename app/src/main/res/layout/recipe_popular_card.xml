<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Section Title -->
    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's Hot"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inria_serif_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Popular Recipe Image -->
    <!--    Add Glide implementation with RoundedCorners(16) in future-->
    <ImageView
        android:id="@+id/popularRecipeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cornerRadius="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_recipe"
        app:layout_constraintTop_toBottomOf="@id/sectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Recipe Name -->
    <TextView
        android:id="@+id/recipePopularDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dressings & Sauces"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inria_serif_bold"
        app:layout_constraintBottom_toBottomOf="@id/popularRecipeImage"
        app:layout_constraintStart_toStartOf="@id/popularRecipeImage"
        android:layout_margin="12dp"/>

    <!-- Recipe Description -->
    <TextView
        android:id="@+id/recipePopularDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best recipes selected by HotPot users"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inria_serif"
        app:layout_constraintBottom_toBottomOf="@id/popularRecipeImage"
        app:layout_constraintStart_toStartOf="@id/popularRecipeImage"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
